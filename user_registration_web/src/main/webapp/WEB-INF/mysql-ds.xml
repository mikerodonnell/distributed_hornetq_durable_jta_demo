<?xml version="1.0" encoding="UTF-8"?>
<!-- This is an unmanaged datasource. It should be used for proofs of concept 
	or testing only. It uses H2, an in memory database that ships with JBoss 
	AS. -->
<datasources xmlns="http://www.jboss.org/ironjacamar/schema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.jboss.org/ironjacamar/schema http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">
	<datasource jndi-name="java:jboss/datasources/user_database" pool-name="user_database" enabled="true" use-java-context="true">
		<connection-url>jdbc:mysql://localhost:3306/user_database</connection-url>
		<driver>mysql</driver>
		<security>
			<user-name>user_db_admin</user-name>
			<password>user_db_admin</password>
		</security>
	</datasource>
</datasources>
